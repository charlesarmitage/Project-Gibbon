<Window x:Class="JabberWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Gibbon" Height="446" Width="525" Background="#A2000000" FontWeight="Normal" WindowStyle="SingleBorderWindow">
    <Grid Background="#A2000000" VerticalAlignment="Center">
        <Button Content="Configure" Height="23" HorizontalAlignment="Left" Name="configureButton" VerticalAlignment="Top" Width="75" Click="configureButton_Click" Foreground="White" Background="#00000000"/>
        <TextBox Height="58" HorizontalAlignment="Left" Margin="90,349,0,0" Name="sendMsgTextbox" VerticalAlignment="Top" Width="284" Foreground="White" Background="#00000000" KeyDown="sendMsgTextbox_KeyDown" />
        <Button Content="Send" Height="58" HorizontalAlignment="Left" Margin="380,349,0,0" Name="sendButton" VerticalAlignment="Top" Width="63" Foreground="White" Background="#00000000" FontSize="16" />
        <Viewbox Height="46" HorizontalAlignment="Left" Margin="7,29,0,0" Name="viewbox1" VerticalAlignment="Top" Width="207">
            <Label Content="" Height="28" Name="statusLabel" Foreground="White" />
        </Viewbox>
        
        <ScrollViewer Height="262" HorizontalAlignment="Left" Margin="7,81,0,0" Name="rosterScrollViewer" VerticalAlignment="Top" Width="207">
            <StackPanel Name="rosterStackPanel" VerticalAlignment="Top" Width="189" CanVerticallyScroll="True"/>
        </ScrollViewer>
        
        <ScrollViewer Height="336" HorizontalAlignment="Left" Margin="220,7,0,0" Name="msgScrollViewer" VerticalAlignment="Top" Width="271">
        <StackPanel Name="messagesStackPanel" VerticalAlignment="Top" CanVerticallyScroll="True"></StackPanel>
        </ScrollViewer>
        
        <TextBox Height="26" Foreground="White" HorizontalAlignment="Left" Margin="8,349,0,0" Name="toTextbox" VerticalAlignment="Top" Width="76" Background="#00000000" />
    </Grid>
</Window>
